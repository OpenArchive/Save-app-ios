# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Generate app icon"
  lane :app_icon do
    appicon(
      appicon_image_file: 'fastlane/metadata/app_icon.png',
      appicon_devices: [:ipad, :iphone, :ios_marketing],
      appicon_path: "OpenArchive/Assets.xcassets"
    )
  end

  desc "Generate new localized screenshots"
  lane :screenshots do
    capture_screenshots(workspace: "Save.xcworkspace", scheme: "Screenshots")
  end

  desc "Upload App Store Metadata"
  lane :upload_metadata do
    deliver(
      skip_binary_upload: true,
      skip_app_version_update: true,

      skip_screenshots: true,

      force: true,
    )
  end

  desc "Upload App Store Screenshots"
  lane :upload_screenshots do
    deliver(
      skip_binary_upload: true,
      skip_app_version_update: true,

      skip_metadata: true,
      overwrite_screenshots: true,
    )
  end
end
